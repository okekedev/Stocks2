{
  "watch": [
    "backend/server.js",
    "backend/config/",
    "backend/routes/",
    "backend/services/"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "dist/",
    "*.log",
    "backend/.env"
  ],
  "delay": "500",
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": true
}